@model Workers.Web.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменение</h2>

<h4>Сотрудник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="post" class="control-label">Должность</label>
                <input asp-for="post" class="form-control" />
                <span asp-validation-for="post" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="devision" class="control-label">Подразделение</label>
                <input asp-for="devision" class="form-control" />
                <span asp-validation-for="devision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salary" class="control-label">Оклад</label>
                <input asp-for="salary" class="form-control" />
                <span asp-validation-for="salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обратно к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
